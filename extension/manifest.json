{
  "manifest_version": 3,
  "name": "TabEase",
  "description": "TabEase streamlines online browsing with customizable tab groups and efficient navigation features.",
  "version": "1.0.0",
  "permissions": ["tabs"],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://tabease.co/*"],
      "js": ["scripts/content.js"]
    }
  ]
}
